<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.jr.mapper.UserMapper">
    <resultMap id="userResultMap" type="org.example.jr.entity.User">
        <id property="id" column="id"/>
        <result property="nick_name" column="nick_name"/>
        <result property="user_name" column="user_name"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="phone" column="phone"/>
        <result property="user_password" column="user_password"/>
        <result property="account" column="account"/>
        <result property="password" column="password"/>
        <result property="last_login_time" column="last_login_time"/>
        <result property="register_time" column="register_time"/>
        <result property="update_time" column="update_time"/>
    </resultMap>
        <!--插入用户-->
    <insert id="insertUser">
        INSERT INTO jr_user (
            id,
            nick_name,
            age,
            sex,
            province,
            city,
            phone,
            account,
            password,
            register_time,
            update_time,
            imgurl,
            birthday,
            constellation
        ) VALUES (
                     #{id},
                     #{nick_name},
                     #{age},
                     #{sex},
                     #{province},
                     #{city},
                     #{phone},
                     #{phone},
                     #{password},
                     NOW(),
                     NOW(),
                     #{imgurl},
                     #{birthday},
                     #{constellation}
                 )
    </insert>
    <!--根据账号获取用户信息-->
    <select id="getUserByUser" resultMap="userResultMap">
        select * from jr_user where phone= #{phone}
    </select>
    <!--根据账号更新用户信息-->
    <update id="updateUser">
        UPDATE jr_user SET nick_name = #{nick_name},user_name = #{user_name}, age = #{age}, sex = #{sex}, province = #{province}, city = #{city},email = #{email}, update_time = NOW() WHERE phone = #{phone}
    </update>
    <!--删除用户-->
    <delete id="deleteUser">
        DELETE FROM jr_user WHERE phone = #{phone}
    </delete>
    <!--更新用户登录时间-->
    <update id="updateLogintime">
        UPDATE jr_user SET last_login_time = NOW() WHERE phone = #{phone}
    </update>
    <!--根据账号和地区信息更新密码-->
    <update id="updatePwd">
        UPDATE jr_user SET password = #{password} WHERE phone = #{phone}
    </update>
    <!--根据账号更新头像-->
    <update id="userImg">
        UPDATE jr_user SET imgurl = #{imgurl} WHERE phone = #{phone}
    </update>
    <!--根据账号和密码查询用户-->
    <select id="getUserByAccountAndPassword" resultMap="userResultMap">
        SELECT * FROM jr_user WHERE phone = #{phone} and password = #{password}
    </select>
</mapper>